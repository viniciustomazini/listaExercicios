{
  "manifest_version": 3,
  "name": "Bing Automator Brasil",
  "version": "1.0.0",
  "description": "Extensão para automatizar pesquisas no Bing sobre assuntos brasileiros em português, com recursos de temporização e emulação mobile.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "alarms",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.bing.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bing Automator Brasil",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bing.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "mobile_user_agent",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}

